{% extends 'base.html.twig' %}

{% block title %}Вход в систему - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: Arial, sans-serif; /* Как в вашем PHP */
            background-color: #f4f4f8;
            margin: 0;
            padding: 0;
        }

        .login-container { /* Переименован класс */
            max-width: 400px;
            background: white;
            padding: 30px;
            margin: 100px auto;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .login-container h1.page-title { /* Класс для h1 */
            text-align: center;
            color: #333;
            margin-bottom: 25px;
        }

        .login-label { /* Класс для label */
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #444;
        }

        .login-input { /* Класс для input */
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        .login-button { /* Класс для button */
            background-color: #5c67f2;
            color: white;
            border: none;
            padding: 12px;
            width: 100%;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            margin-bottom: 15px; /* Сохраняем отступ */
            transition: background-color 0.2s;
        }

        .login-button:hover {
            background-color: #434de2;
        }

        .login-errors { /* Класс для ошибок */
            background-color: #ffe0e0;
            border: 1px solid #cc0000;
            padding: 10px;
            margin-bottom: 20px;
            color: #cc0000;
            border-radius: 4px;
        }
        .login-errors ul {
            padding-left: 20px;
            margin-bottom: 0;
        }


        .register-link-custom { /* Класс для ссылки на регистрацию */
            text-align: center;
            margin-top: 15px; /* Отступ сверху */
        }

        .register-link-custom a {
            color: #5c67f2;
            text-decoration: none;
        }

        .register-link-custom a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container">
        <h1 class="page-title">Вход в систему</h1>

        {% if errors is defined and errors is not empty %}
            <div class="login-errors">
                <strong>Обнаружены ошибки:</strong>
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        {# Для отображения flash-сообщений об успехе регистрации #}
        {% for message in app.flashes('login_success') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}


        <form action="{{ path('auth_login_handle') }}" method="POST" autocomplete="off">
            <div>
                <label for="username" class="login-label">Логин</label>
                <input type="text" id="username" name="username" class="login-input" value="{{ username | default('') }}" required>
            </div>

            <div>
                <label for="password" class="login-label">Пароль</label>
                <input type="password" id="password" name="password" class="login-input" required>
            </div>

            <button type="submit" class="login-button">Войти</button>

            <div class="register-link-custom">
                Нет аккаунта? <a href="{{ path('auth_register_form') }}">Зарегистрироваться</a>
            </div>
        </form>
    </div>
{% endblock %}