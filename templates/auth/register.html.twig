{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .register-container {
            max-width: 450px;
            margin: 50px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        .form-title {
            margin-bottom: 24px;
            color: #333;
            text-align: center;
        }
        .login-link {
            text-align: center;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="register-container">
            <h2 class="form-title">Регистрация</h2>

            {{ form_start(registrationForm) }}
            {{ form_errors(registrationForm) }}

            <div class="mb-3">
                {{ form_label(registrationForm.username, 'Имя пользователя', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                <div class="form-text text-danger">
                    {{ form_errors(registrationForm.username) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword.first, 'Пароль', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                <div class="form-text text-danger">
                    {{ form_errors(registrationForm.plainPassword.first) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword.second, 'Повторите пароль', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                <div class="form-text text-danger">
                    {{ form_errors(registrationForm.plainPassword.second) }}
                </div>
            </div>

            {{ form_widget(registrationForm.submit, {'attr': {'class': 'btn btn-primary w-100'}}) }}
            {{ form_end(registrationForm) }}

            <div class="login-link">
                <p>Уже есть аккаунт? <a href="{{ path('app_login') }}">Войти</a></p>
            </div>
        </div>
    </div>
{% endblock %}