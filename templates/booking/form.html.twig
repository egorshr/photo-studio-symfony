{% extends 'base.html.twig' %}

{% block title %}Запись в фотостудию - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: Arial, sans-serif; /* Как в вашем PHP */
            background-color: #f4f4f8;
            margin: 0;
            padding: 0;
            /* color: #333; уже есть в base или другом месте */
        }

        .form-container { /* Переименовал, чтобы не конфликтовать с .container из base.html.twig */
            max-width: 500px;
            background: white;
            padding: 30px;
            margin: 50px auto;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-container h1.page-title { /* Добавлен класс для h1 */
            text-align: center;
            color: #333;
            margin-bottom: 20px; /* Добавлен отступ снизу */
        }
        /* .user-info и .nav-links теперь часть _navbar.html.twig и base.html.twig */

        .form-label-custom { /* Для <label> */
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #444;
        }

        .form-input-custom, /* Для <input> и <select> */
        .form-select-custom {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        .form-button-custom { /* Для <button> */
            background-color: #5c67f2;
            color: white;
            border: none;
            padding: 12px;
            width: 100%;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.2s; /* Добавил transition */
        }

        .form-button-custom:hover {
            background-color: #434de2;
        }

        .errors-custom { /* Для блока ошибок */
            background-color: #ffe0e0;
            border: 1px solid #cc0000;
            padding: 10px;
            margin-bottom: 20px;
            color: #cc0000;
            border-radius: 4px;
        }
        .errors-custom ul {
            padding-left: 20px;
            margin-bottom: 0;
        }

        .storage-selector {
            background-color: #f2f2f2;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
            border: 1px solid #ddd;
        }

        .storage-selector h3 {
            margin-top: 0;
            margin-bottom: 10px;
            color: #333;
            font-size: 1.1em; /* Немного уменьшил */
        }

        .storage-form {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .storage-form-options {
            display: flex; /* Для размещения радиокнопок в ряд */
            gap: 15px;    /* Пространство между радиокнопками */
        }

        .storage-form label { /* Для label радиокнопок */
            margin-bottom: 0;
            margin-right: 10px;
            display: inline-flex;
            align-items: center;
            font-weight: normal; /* Убираем жирность с label радиокнопок */
            color: #444;
        }

        .storage-form label input[type="radio"] {
            width: auto;
            margin-right: 5px;
            margin-bottom: 0;
            padding: 0; /* Убираем внутренние отступы у радио */
            border: initial; /* Сброс стилей границы */
            border-radius: initial;
            box-sizing: initial;
        }

        .storage-form button { /* Для кнопки "Применить" в выборе хранилища */
            width: auto;
            padding: 8px 15px;
            font-size: 14px; /* Уменьшил шрифт */
            background-color: #6c757d; /* Серый цвет как у Bootstrap secondary */
        }
        .storage-form button:hover {
            background-color: #5a6268;
        }

        .form-nav-links { /* Класс для ссылок под формой */
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            padding-top: 15px; /* Отступ сверху */
            border-top: 1px solid #eee; /* Разделитель */
        }

        .form-nav-links a {
            color: #5c67f2;
            text-decoration: none;
            font-weight: bold;
        }

        .form-nav-links a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1 class="page-title">Запись в фотостудию</h1>
        {# Информация о пользователе теперь в _navbar.html.twig #}

        <div class="storage-selector">
            <h3>Выберите тип хранилища данных</h3>
            <form action="{{ path('booking_set_storage_type') }}" method="POST" class="storage-form">
                <div class="storage-form-options">
                    <label>
                        <input type="radio" name="storage_type" value="csv" {{ storageType == 'csv' ? 'checked' : '' }}>
                        CSV файл
                    </label>
                    <label>
                        <input type="radio" name="storage_type" value="db" {{ storageType == 'db' ? 'checked' : '' }}>
                        База данных
                    </label>
                </div>
                <button type="submit" class="form-button-custom">Применить</button>
            </form>
        </div>

        {% if errors is defined and errors is not empty %}
            <div class="errors-custom">
                <strong>Обнаружены ошибки:</strong>
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        <form action="{{ path('booking_form_submit') }}" method="POST" autocomplete="off">
            <div>
                <label for="name" class="form-label-custom">Имя</label>
                <input type="text" name="name" id="name" class="form-input-custom" value="{{ data.name | default('') }}" required>
            </div>

            <div>
                <label for="service" class="form-label-custom">Услуга</label>
                <select name="service" id="service" class="form-select-custom" required>
                    <option value="">Выберите услугу</option>
                    {% for service_item in availableServices %}
                        <option value="{{ service_item }}" {{ (data.service | default('') == service_item) ? 'selected' : '' }}>
                            {{ service_item }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label for="photographer" class="form-label-custom">Фотограф</label>
                <select name="photographer" id="photographer" class="form-select-custom" required>
                    <option value="">Выберите фотографа</option>
                    {% for photographer_item in availablePhotographers %}
                        <option value="{{ photographer_item }}" {{ (data.photographer | default('') == photographer_item) ? 'selected' : '' }}>
                            {{ photographer_item }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label for="date" class="form-label-custom">Дата</label>
                <input type="date" name="date" id="date" class="form-input-custom" value="{{ data.date | default('') }}" required min="{{ "now"|date("Y-m-d") }}">
            </div>

            <button type="submit" class="form-button-custom">Записаться</button>
        </form>

        <div class="form-nav-links">
            <a href="{{ path('booking_list') }}">Просмотр записей</a>
            {% if storageType == 'csv' %} {# Условие как в вашем PHP-файле, только для CSV #}
                <a href="{{ path('booking_migrate_data') }}">Мигрировать данные в БД</a>
            {% endif %}
        </div>
    </div>
{% endblock %}