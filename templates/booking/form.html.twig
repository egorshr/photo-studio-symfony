{% extends 'base.html.twig' %}

{% block title %}Заказать фотосессию - Фотостудия{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        .service-card, .photographer-card {
            cursor: pointer;
            height: 100%;
        }
        .service-card.selected, .photographer-card.selected {
            border-color: #5a67d8;
            box-shadow: 0 0 0 0.25rem rgba(90, 103, 216, 0.5);
        }
        .service-image, .photographer-image {
            height: 150px;
            object-fit: cover;
        }
    </style>
{% endblock %}

{% block content %}
    <h1 class="display-4 text-center mb-5">Заказать фотосессию</h1>

    {% if errors|length > 0 %}
        <div class="alert alert-danger">
            <ul class="mb-0">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <div class="card shadow mb-5">
        <div class="card-body p-4">
            <form method="post" action="{{ path('submit_form') }}" id="bookingForm">
                <div class="row mb-4">
                    <div class="col-md-12">
                        <h3 class="border-bottom pb-2 mb-4">1. Личные данные</h3>
                        <div class="mb-3">
                            <label for="name" class="form-label">Ваше имя</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{ data.name|default('') }}" required>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <h3 class="border-bottom pb-2 mb-4">2. Выберите услугу</h3>
                        <div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
                            <div class="col">
                                <div class="card service-card h-100" data-service="Портретная съемка">
                                    <img src="/api/placeholder/400/300" class="card-img-top service-image" alt="Портретная съемка">
                                    <div class="card-body">
                                        <h5 class="card-title">Портретная съемка</h5>
                                        <p class="card-text">Профессиональные портреты в студии или на открытом воздухе.</p>
                                    </div>
                                    <div class="card-footer">
                                        <small class="text-muted">от 3000 руб.</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="card service-card h-100" data-service="Свадебная фотосессия">
                                    <img src="/api/placeholder/400/300" class="card-img-top service-image" alt="Свадебная фотосессия">
                                    <div class="card-body">
                                        <h5 class="card-title">Свадебная фотосессия</h5>
                                        <p class="card-text">Запечатлим яркие моменты вашего особенного дня.</p>
                                    </div>
                                    <div class="card-footer">
                                        <small class="text-muted">от 15000 руб.</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="card service-card h-100" data-service="Семейная фотосессия">
                                    <img src="/api/placeholder/400/300" class="card-img-top service-image" alt="Семейная фотосессия">
                                    <div class="card-body">
                                        <h5 class="card-title">Семейная фотосессия</h5>
                                        <p class="card-text">Теплые и душевные снимки вашей семьи.</p>
                                    </div>
                                    <div class="card-footer">
                                        <small class="text-muted">от 5000 руб.</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" name="service" id="selectedService" value="{{ data.service|default('') }}" required>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <h3 class="border-bottom pb-2 mb-4">3. Выберите фотографа</h3>
                        <div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
                            <div class="col">
                                <div class="card photographer-card h-100" data-photographer="Александр Петров">
                                    <img src="/api/placeholder/400/300" class="card-img-top photographer-image" alt="Александр Петров">
                                    <div class="card-body">
                                        <h5 class="card-title">Александр Петров</h5>
                                        <p class="card-text">Опыт работы более 10 лет. Специализация: портретная и свадебная фотография.</p>
                                    </div>
                                    <div class="card-footer d-flex justify-content-between align-items-center">
                                        <small class="text-muted">Рейтинг: 4.9</small>
                                        <div>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="card photographer-card h-100" data-photographer="Мария Иванова">
                                    <img src="/api/placeholder/400/300" class="card-img-top photographer-image" alt="Мария Иванова">
                                    <div class="card-body">
                                        <h5 class="card-title">Мария Иванова</h5>
                                        <p class="card-text">Креативный подход к семейным фотосессиям. Умеет найти подход к детям.</p>
                                    </div>
                                    <div class="card-footer d-flex justify-content-between align-items-center">
                                        <small class="text-muted">Рейтинг: 4.8</small>
                                        <div>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-half text-warning"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="card photographer-card h-100" data-photographer="Дмитрий Соколов">
                                    <img src="/api/placeholder/400/300" class="card-img-top photographer-image" alt="Дмитрий Соколов">
                                    <div class="card-body">
                                        <h5 class="card-title">Дмитрий Соколов</h5>
                                        <p class="card-text">Мастер художественной фотографии. Создает уникальные концептуальные снимки.</p>
                                    </div>
                                    <div class="card-footer d-flex justify-content-between align-items-center">
                                        <small class="text-muted">Рейтинг: 4.7</small>
                                        <div>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-half text-warning"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" name="photographer" id="selectedPhotographer" value="{{ data.photographer|default('') }}" required>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <h3 class="border-bottom pb-2 mb-4">4. Выберите дату</h3>
                        <div class="mb-3">
                            <label for="datePicker" class="form-label">Дата фотосессии</label>
                            <input type="date" class="form-control" id="datePicker" name="date" value="{{ data.date|default('') }}" required min="{{ 'now'|date('Y-m-d') }}">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle-fill me-2"></i> Текущий режим хранения: <strong>{{ storageType == 'db' ? 'База данных' : 'CSV-файлы' }}</strong>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-calendar-check"></i> Забронировать фотосессию
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Инициализация выбора даты
            flatpickr("#datePicker", {
                minDate: "today",
                dateFormat: "Y-m-d"
            });

            // Установка выбранной услуги если она уже была выбрана
            const selectedService = document.getElementById('selectedService').value;
            if (selectedService) {
                document.querySelector(`.service-card[data-service="${selectedService}"]`)?.classList.add('selected');
            }

            // Установка выбранного фотографа если он уже был выбран
            const selectedPhotographer = document.getElementById('selectedPhotographer').value;
            if (selectedPhotographer) {
                document.querySelector(`.photographer-card[data-photographer="${selectedPhotographer}"]`)?.classList.add('selected');
            }

            // Обработка нажатия на карточку услуги
            document.querySelectorAll('.service-card').forEach(card => {
                card.addEventListener('click', function() {
                    // Убрать выделение со всех карточек
                    document.querySelectorAll('.service-card').forEach(c => c.classList.remove('selected'));
                    // Выделить текущую карточку
                    this.classList.add('selected');
                    // Установить значение в скрытое поле
                    document.getElementById('selectedService').value = this.dataset.service;
                });
            });

            // Обработка нажатия на карточку фотографа
            document.querySelectorAll('.photographer-card').forEach(card => {
                card.addEventListener('click', function() {
                    // Убрать выделение со всех карточек
                    document.querySelectorAll('.photographer-card').forEach(c => c.classList.remove('selected'));
                    // Выделить текущую карточку
                    this.classList.add('selected');
                    // Установить значение в скрытое поле
                    document.getElementById('selectedPhotographer').value = this.dataset.photographer;
                });
            });

            // Валидация формы перед отправкой
            document.getElementById('bookingForm').addEventListener('submit', function(e) {
                const service = document.getElementById('selectedService').value;
                const photographer = document.getElementById('selectedPhotographer').value;
                const date = document.getElementById('datePicker').value;
                const name = document.getElementById('name').value;

                if (!service || !photographer || !date || !name) {
                    e.preventDefault();
                    alert('Пожалуйста, заполните все поля формы');
                }
            });
        });
    </script>
{% endblock %}